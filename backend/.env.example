# Environment Configuration for Poscal Backend

# Node Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=poscal_user
DB_PASSWORD=postgres
DB_NAME=poscal_db

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:5173
FRONTEND_PRODUCTION_URL=https://poscal.com

# Paystack Configuration (for payment processing)
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_WEBHOOK_SECRET=your-paystack-webhook-secret

# Finnhub API (for real-time prices)
FINNHUB_API_KEY=your-finnhub-api-key

# Email Configuration (optional)
SMTP_HOST=smtp.sendbaba.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
MAIL_FROM=Poscal <noreply@poscalfx.com>

# Web Push Configuration (for push notifications)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Features
ENABLE_REALTIME_PRICES=true
ENABLE_PUSH_NOTIFICATIONS=true
